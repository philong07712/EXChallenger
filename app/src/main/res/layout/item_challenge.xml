<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingTop="12dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/iv_challenge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_push_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.utilityview.customview.CustomTextviewFonts
        android:id="@+id/tv_challenge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:text="Push up"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/iv_challenge"
        app:layout_constraintTop_toTopOf="parent" />

    <com.utilityview.customview.CustomTextviewFonts
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="x15"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_challenge"
        app:layout_constraintStart_toEndOf="@id/tv_challenge" />

    <com.utilityview.customview.CustomTextviewFonts
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 point"
        android:textColor="#09C810"
        android:textSize="18sp"
        app:font_type="@string/bold"
        app:layout_constraintStart_toStartOf="@id/tv_challenge"
        app:layout_constraintTop_toBottomOf="@id/tv_challenge" />

    <com.utilityview.customview.CustomTextviewFonts
        android:id="@+id/tv_schedule_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Everyday"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.utilityview.customview.CustomTextviewFonts
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="at 07:00 AM"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/tv_schedule_type"
        app:layout_constraintTop_toBottomOf="@id/tv_schedule_type" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_border"
        android:background="@color/color_border"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>