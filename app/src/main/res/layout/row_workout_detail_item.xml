<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_workout_detail_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/row_workout_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Push up"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/row_workout_detail_photo"
        app:layout_constraintTop_toTopOf="@+id/row_workout_detail_photo" />

    <TextView
        android:id="@+id/row_workout_detail_rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="x 15"
        app:layout_constraintStart_toStartOf="@+id/row_workout_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/row_workout_detail_name" />

    <TextView
        android:id="@+id/row_workout_detail_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="+ 15"
        android:textColor="@color/text_detail_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/row_workout_detail_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_workout_detail_photo" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/grayLine"
        app:layout_constraintEnd_toEndOf="@+id/row_workout_detail_point"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/row_workout_detail_photo"
        app:layout_constraintTop_toBottomOf="@+id/row_workout_detail_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>