<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:timePickerStyle">@style/MyTimePicker</item>

    </style>

    <style name="MainTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="IconBack">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:background">@drawable/bg_trans_press_gray_round</item>
    </style>

    <style name="TextHeaderBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="font_type">@string/bold</item>
    </style>

    <style name="MyTimePicker" parent="AppTheme">
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
        <item name="colorControlNormal">@color/color_main</item>

    </style>

    <style name="AppTheme.FullScreenDialog" parent="AppTheme">
        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--        <item name="colorAccent">@color/colorAccent</item>-->
        <!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>
</resources>
